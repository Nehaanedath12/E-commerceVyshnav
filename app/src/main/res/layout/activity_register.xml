<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/edittext_1"
                    android:textColorHint="@color/color_gray_1">

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:autofillHints=""
                        android:background="@drawable/edittext_1"
                        android:drawablePadding="10dp"
                        android:ems="13"
                        android:hint="@string/name"
                        android:inputType="textPersonName"
                        android:paddingStart="30dp"
                        android:paddingEnd="10dp"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_1">

                    <EditText
                        android:id="@+id/last_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:autofillHints=""
                        android:background="@drawable/edittext_1"
                        android:ems="13"
                        android:hint="@string/last_name"
                        android:inputType="textPersonName"
                        android:paddingStart="30dp"
                        android:paddingEnd="10dp"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_1">

                    <EditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:autofillHints=""
                        android:background="@drawable/edittext_1"
                        android:ems="13"
                        android:hint="@string/username"
                        android:inputType="textPersonName"
                        android:paddingStart="30dp"
                        android:paddingEnd="10dp"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_1">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:autofillHints=""
                        android:background="@drawable/edittext_1"
                        android:ems="13"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:paddingStart="30dp"
                        android:paddingEnd="10dp"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext_1"
                        >
                        <Spinner
                            android:id="@+id/sp_country_code"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/edittext_1"
                            android:drawableStart="@drawable/ic_red_arrow"
                            android:drawablePadding="10dp"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:paddingEnd="10dp"
                            android:textSize="16sp"
                            />
                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext_1">

                        <EditText
                            android:id="@+id/mobile_no"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/edittext_1"
                            android:drawableStart="@drawable/ic_red_arrow"
                            android:drawablePadding="10dp"
                            android:ems="10"
                            android:hint="@string/mobile_number"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:paddingEnd="10dp"
                            android:textSize="16sp"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_1">

                    <EditText
                        android:id="@+id/phone_no"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:autofillHints=""
                        android:background="@drawable/edittext_1"
                        android:ems="13"
                        android:hint="@string/phone_number"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:paddingStart="30dp"
                        android:paddingEnd="10dp"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_1">

                    <EditText
                        android:id="@+id/mail_id"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:autofillHints=""
                        android:background="@drawable/edittext_1"
                        android:drawablePadding="10dp"
                        android:ems="13"
                        android:hint="@string/mail_id"
                        android:inputType="textEmailAddress"
                        android:paddingStart="30dp"
                        android:paddingEnd="10dp"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_1">

                    <EditText
                        android:id="@+id/address_one"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:autofillHints=""
                        android:background="@drawable/edittext_1"
                        android:drawablePadding="10dp"
                        android:ems="13"
                        android:hint="@string/address1"
                        android:inputType="textPostalAddress"
                        android:paddingStart="30dp"
                        android:paddingEnd="10dp"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_1">

                    <EditText
                        android:id="@+id/address_two"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:autofillHints=""
                        android:background="@drawable/edittext_1"
                        android:drawablePadding="10dp"
                        android:ems="13"
                        android:hint="@string/address2"
                        android:inputType="textPostalAddress"
                        android:paddingStart="30dp"
                        android:paddingEnd="10dp"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edittext_1"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edittext_1"
                        android:ems="13"
                        android:hint="@string/country"
                        android:inputType="text"
                        android:paddingStart="30dp"
                        android:paddingEnd="10dp"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_1"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >

                    <Spinner
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edittext_1"
                        android:ems="13"
                        android:hint="@string/city"
                        android:inputType="text"
                        android:paddingStart="30dp"
                        android:paddingEnd="10dp"
                        android:textSize="16sp" />
                </LinearLayout>


                <Button
                    android:id="@+id/register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_5"
                    android:ems="12"
                    android:text="@string/register"
                    android:textAllCaps="false"
                    android:textColor="@color/color_white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_2"
                    android:ems="12"
                    android:text="@string/login"
                    android:textAllCaps="false"
                    android:textColor="@color/color_black"
                    android:textSize="16sp" />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/background_gradient"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:ignore="ContentDescription" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>